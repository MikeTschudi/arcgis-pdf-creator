{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "declaration": true,
    "importHelpers": false,
    "lib": ["dom", "es2020"],
    "module": "umd",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "src",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": false,
    "target": "es2020"
  },
  "exclude": [
  ],
  "include": [
    "src/**/*.ts"
  ],
  "paths": {
    "jspdf": ["node_modules/jspdf/dist/jspdf.umd.min.js"]
  },
  "typedocOptions": {
    "entryPoints": [
      "src/grid.ts",
      "src/label.ts",
      "src/pdf.ts"
    ],
    "out": "docs"
  }
}
